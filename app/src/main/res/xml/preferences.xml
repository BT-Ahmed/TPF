<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Product">
        <!-- A seek bar preference that allows users to change the text size of the products' labels -->
        <SeekBarPreference
            android:max="30"
            android:min="10"
            app:defaultValue="16"
            app:key="text_size"
            app:showSeekBarValue="true"
            app:title="Text size" />
    </PreferenceCategory>

</PreferenceScreen>
