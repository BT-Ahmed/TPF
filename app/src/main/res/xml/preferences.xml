<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Product">
        <!-- A seek bar preference that allows users to change the text size of the products' labels -->
        <SeekBarPreference
            app:key="text_size"
            app:title="Text size"
            android:min="10"
            android:max="30"
            app:defaultValue="16" />
        <!-- A color preference that allows users to change the text color of the products' labels -->
        <ColorPreferenceCompat
            app:key="text_color"
            app:title="Text color"
            app:defaultValue="@color/black" />
    </PreferenceCategory>

</PreferenceScreen>
